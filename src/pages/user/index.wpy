</template>

<script>
  import wepy from 'wepy'
  import commApi from '../../api/comm'
  import carousel from '../../components/carousel'
  import ad from '../../components/ad'
  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '每天自律打卡'
    }


    components = {
      Carousel:carousel,
      Ad1:ad,
      Ad2:ad
    };

    data = {
      isCard:true,
      showLogin:false,
      StatusBar:0,
      CustomBar:0,
      user:[],
      carousels:[],
      ads:[],
      videoAd:null,
    }

    methods = {
      goto(to){
          console.log('to',to)
          wepy.navigateTo({url:to});
      },
      click(){
        
      },

      async inspiresign(){ // 观看激励视频 
        let videoAd = this.videoAd 
        console.log('videoAd',videoAd)
        // 用户触发广告后，显示激励视频广告
        if (videoAd) {
          videoAd.show().catch(() => {
            // 失败重试
            videoAd.load()
              .then(() => videoAd.show())
              .catch(err => {
                console.log('激励视频 广告显示失败')
              })
          })
          
          videoAd.onClose((res) => {
            console.log('onClose res',res)
          })
        }
      }

      async inspiresign(){ // 观看激励视频后签到
        let videoAd = this.videoAd 
        console.log('videoAd',videoAd)
        // 用户触发广告后，显示激励视频广告
        if (videoAd) {
          videoAd.show().catch(() => {
            // 失败重试
            videoAd.load()
              .then(() => videoAd.show())
              .catch(err => {
                console.log('激励视频 广告显示失败')
              })
          })
          
          videoAd.onClose((res) => {
            console.log('onClose res',res)
          })
        }
      }
      
      async sign(){
        

        // 创建激励视频广告实例
        if (wx.createRewardedVideoAd) {
          let videoAd = wx.createRewardedVideoAd({
            adUnitId: 'adunit-af7d0a78f1f9b557'
          })
          videoAd.onLoad(() => {})
          videoAd.onError((err) => {})
          videoAd.onClose((res) => {
            console.log('onClose2 res',res)
          })
          console.log('videoAd',videoAd)

          // videoAd.onLoad(() => {
          //   console.log('激励视频 广告加载成功')
          // })

          // videoAd.show()
          // .then(() => console.log('激励视频 广告显示'))

          videoAd.onError(err => {
            console.log(err)
          })
          this.videoAd = videoAd

        }

      },


      async dosign(){
        
         wepy.showToast({
            title: "签到中...",
            icon:"loading",
            duration: 500
          });
        let data = await commApi.UserSign()
        if(data.message){
          wepy.showToast({ title: data.message, icon:"none", duration: 2000 });
        }else{
          wepy.showToast({ title: '签到成功', icon:"none", duration: 500 });
          
          this.user = data
          // this.user.total_point = data.total_point
        }
        console.log('sign data', data)
        this.$apply()
      },


      async login(){
        let auth = await wepy.getSetting()
        if ( auth.authSetting['scope.userInfo'] ) {
          // 已授权
          let user = await wepy.getUserInfo()
          this.user.avatar = user.userInfo.avatarUrl
          commApi.AsyncUserData(user)
          wepy.showToast({
            title: "已同步用户数据",
            icon:"none",
            duration: 1000
          });
        }else{
          this.showLogin = true
        }
        this.$apply()
      },

      hideModal(){
          this.showLogin = false
      },

      async bindGetUserInfo(e) {
        this.user.avatar = e.detail.userInfo.avatarUrl
        this.showLogin = false
        this.$apply()
        commApi.AsyncUserData(e.detail)
      }
    }


    async onShow() {
      if (typeof this.$wxpage.getTabBar === 'function' &&
        this.$wxpage.getTabBar()) {
        this.$wxpage.getTabBar().setData({
        selected: 2
        })
        this.$apply()
      }
      this.user = await commApi.GetMe() // 获取当前用户
      if(this.user.showlogin){
        this.showLogin = true
      }
      this.$apply()
    }

    async onLoad() {
        this.StatusBar= wepy.$instance.globalData.StatusBar
        this.CustomBar= wepy.$instance.globalData.CustomBar
        this.ads = await commApi.GetAds()
        this.carousels = await commApi.GetCarousels()
        this.$apply()
    }

    // 下拉刷新
    async onPullDownRefresh() {
        this.user = await commApi.GetMe() // 获取当前用户
        wepy.stopPullDownRefresh()
        this.$apply()
    }


  }

</script>