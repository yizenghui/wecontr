<view class="cu-modal {{showLogin?'show':''}}" @tap='hideModal'>
  <view class="cu-dialog padding" catchtap>
    <view class="cu-bar">
      <view class='action'>
        <text class='icon-title text-orange'></text> 请求获取用户公开信息
